# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                       controllers.Application.index
                                
# Tasks          
GET     /services                  controllers.Application.services
POST    /services                  controllers.Application.newService
GET     /services/new              controllers.Application.createService
POST    /services/:id/delete       controllers.Application.deleteService(id: ObjectId)
GET     /services/:id/edit         controllers.Application.editService(id: ObjectId)
POST    /services/:id/update       controllers.Application.updateService(id: ObjectId)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
